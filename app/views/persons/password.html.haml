%section
  .prof
    = link_to persons_path, class: "back-button" do
      %p.subtitle Profile

    %h4 Change your password
    = simple_form_for(@user, url: persons_password_update_path, html: { method: :put, class: "ordinary" }) do |f|
      .form-inputs
        = f.input :password, label: "Новый пароль", required: true, autofocus: true
      .form-actions
        = f.button :submit, "Сохранить", class: "btn  btn-submit"
