:javascript
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '270986573025814',
      xfbml      : true,
      version    : 'v2.2'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));


.container

  .notice= notice

  .login-block
    .login-head
      .h3 
        Вход

    .login-form
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal', :role => 'form') do |f|
        .form-group
          = f.label "Email", class: "col-sm-3"
          .col-sm-9.jjj
            = f.email_field :email, :autofocus => true, :label => false, placeholder: "Эл. почта", class: 'form-control'
        .form-group
          = f.label 'Пароль', class: "col-sm-3 control-label"
          .col-sm-9.jjj
            = f.password_field :password, :label => false, placeholder: "Пароль", class: 'form-control'

        - if devise_mapping.rememberable? 
          .form-group
            .col-sm-offset-3.col-sm-9
              .checkbox
                = f.check_box :remember_me
                = f.label 'Запомнить меня'
        .form-group
          .col-sm-12.extramargin
            = f.submit "Войти", class: 'btn btn-default'

    .signupandforgotpass
      = link_to "Зарегистрироваться", new_registration_path(resource_name) 
      = link_to "Забыли пароль?", new_password_path(resource_name) 

    .social-auth
      %hr

      .h4
        Войти через соц.сети
      - resource_class.omniauth_providers.each do |provider|
        .fb-auth-btn
          = link_to "#{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
        .tw-auth-btn
          = link_to "Twitter", omniauth_authorize_path(resource_name, provider)
