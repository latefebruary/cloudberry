.container

  .notice= notice

  .login-block
    .login-head
      .h3 
        Вход

    .login-form
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal', :role => 'form') do |f|
        .form-group
          = f.label "Почта", class: "col-sm-3"
          .col-sm-9.jjj
            = f.email_field :email, :autofocus => true, :label => false, placeholder: "Эл. почта", class: 'form-control'
        .form-group
          = f.label 'Пароль', class: "col-sm-3 control-label"
          .col-sm-9.jjj
            = f.password_field :password, :label => false, placeholder: "Пароль", class: 'form-control'

        - if devise_mapping.rememberable? 
          .form-group
            .col-sm-offset-3.col-sm-9
              .checkbox
                = f.check_box :remember_me
                = f.label 'Запомнить меня'
        .form-group
          .col-sm-12.extramargin
            = f.submit "Войти", class: 'btn btn-default'

    .social-auth
      = render 'devise/shared/socialauth'

    .signupandforgotpass
      = link_to "Зарегистрироваться", new_registration_path(resource_name) 
      |
      = link_to "Забыли пароль?", new_password_path(resource_name) 
