.container
  .login-block
    .login-head
      .h3 Создание нового пароля
    .login-form
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token

        .form-group
          = f.password_field :password, :autofocus => true, :label => false, placeholder: "New password", class: 'form-control'

        .form-group
          = f.password_field :password_confirmation, :label => false, placeholder: "Confirm new password", class: 'form-control'

        = f.submit "Change my password", class: 'btn btn-primary'
