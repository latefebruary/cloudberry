.container

  .notice= notice

  .login-block
    .login-head
      .h3 
        Регистрация

    .login-form
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'form-horizontal', :role => 'form') do |f|
        = devise_error_messages!
        .form-group
          = f.email_field :email, :autofocus => true, :label => false, placeholder: "Эл. почта", class: 'form-control'
        .form-group
          = f.text_field :name, :label => false, placeholder: "Ваше имя", class: 'form-control'
        .form-group
          = f.password_field :password, :label => false, placeholder: "Пароль", class: 'form-control'
        .form-group
          = f.password_field :password_confirmation, :label => false, placeholder: "Введите пароль еще раз", class: 'form-control'

        - if devise_mapping.rememberable? 
          .form-group
            .col-sm-12
              .checkbox
                = f.check_box :remember_me
                = f.label 'Запомнить меня'
        .form-group
          .col-sm-12.extramargin
            = f.submit "Сохранить", class: 'btn btn-success'

    = render 'devise/shared/socialauth'

    .signupandforgotpass
      Уже зарегистрированы?
      = link_to "Войти", new_session_path(resource_name) 
