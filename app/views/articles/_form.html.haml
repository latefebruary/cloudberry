= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation

    %h2 
      = pluralize(@article.errors.count, "error") 
      prohibited this article from being saved

    %ul
    - @article.errors.full_messages.each do |msg|
      %li = msg

  %p
    = f.label :title 
    = f.text_field :title 
 
  %p
    = f.label :anonce
    = f.text_area :anonce 

  %p
    = f.label :text 
    = text_area_tag :text, "", :class => "redactor", :rows => 40, :cols => 120 
 
  %p
    = f.submit
